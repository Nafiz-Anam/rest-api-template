#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run full test suite
echo "🧪 Running full test suite..."
pnpm test

# Run build check
echo "🏗️  Running build check..."
pnpm build

# Run lint check
echo "🔧 Running lint check..."
pnpm lint

echo "✅ All pre-push checks passed!" 